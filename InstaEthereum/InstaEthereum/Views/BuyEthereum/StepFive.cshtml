@model InstaEthereum.ViewModels.StepFiveViewModel

@{
    ViewBag.Title = "5";
    ViewBag.ImageStepCount = "5.png";
    ViewBag.OneEthPrice = InstaEthereum.Models.Helper.parseValueIntoCurrency(Model.EthPrice);
}

<div class="content-div">
    @using (@Html.BeginForm("StepFiveProcess", "BuyEthereum", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12 col-12 col-sm-12 col-lg-12 col-xl-12">
                <h5 id="card-header">Pay With UPI</h5>
            </div>
        </div>
        <div class="divider"></div>
        <div class="row">
            <div class="col-md-12 col-12 col-sm-12 col-lg-12 col-xl-12" style="margin-top: 60px;">
                @Html.TextBoxFor(m => m.UPIAddress, new { @class = "form-control my-form-control", placeholder = "Enter UPI Address" })
                <p id="input-info">You will receive a collect request</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-12 col-sm-12 col-lg-12 col-xl-12 text-center button-div" style="margin-top: 80px;">
                <button type="submit" class="btn btn-primary" style="margin-top: 30px; width: 200px; padding: 15px 0;">SEND REQUEST</button>                
            </div>
        </div>
    }
</div>