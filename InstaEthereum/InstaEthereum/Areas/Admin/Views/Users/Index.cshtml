@model IEnumerable<InstaEthereum.Models.AspNetUser>

@{
    ViewBag.Title = "Users";
    int srNo = 1;
}

@Html.Partial("_TopHeader")


    <div class="main-content">

        @{
            if (!@Model.Any())
            {
                <p class="text-center">We don't have any user yet.</p>
            }
            else
            {
                <table class="table table-bordered table-condensed table-hover table-responsive table-striped">
                    <thead>
                        <tr>
                            <th>Sr</th>
                            <th>Name</th>
                            <th>Mobile</th>
                            <th>Email</th>
                            <th>Wallet Address</th>
                            <th>ETH Purchased</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@srNo</td>
                                    <td>@item.UserName</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Email</td>
                                    <td>@item.WalletAddress</td>
                                    <td></td>
                                    <td>
                                        @using (@Html.BeginForm("Delete", "Users", FormMethod.Post, new { style = "display: inline;", onClick = "return confirm('Are you sure you want tp perform this action?')" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("id", item.Id)
                                            <button type="submit" class="btn btn-link" style=" padding: 0;">Delete</button>
                                        }
                                    </td>
                                </tr>
                                srNo++;
                            }
                        }
                    </tbody>
                </table>
            }
        }
    </div>