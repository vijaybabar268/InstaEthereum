@model InstaEthereum.Areas.Admin.ViewModels.DisplayOrderViewModel

@{
    ViewBag.Title = "Orders";
    int srNo = 1;
}

@Html.Partial("_TopHeader")


<div class="main-content">

    @{
        if (!@Model.Orders.Any())
        {
            <p class="text-center">We don't have any order yet.</p>
        }
        else
        {
            <div class="tbl-scrolled">
                <table class="table table-bordered table-hover table-responsive table-striped">
                    <thead>
                        <tr>
                            <th>Sr</th>
                            <th>Transaction Id</th>
                            <th>Time Stamp</th>
                            <th>User</th>
                            <th>ETH Qty</th>
                            <th>Price</th>
                            <th>ETH TXN No</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.Orders)
                            {
                                <tr>
                                    <td>@srNo</td>
                                    <td>@item.TransactionId</td>
                                    <td>@string.Format("{0:dd/MM/yyyy h:mm:ss tt}", item.OrderDateTime)</td>
                                    <td>
                                        @InstaEthereum.Models.Helper.GetUserEmail(item.UserId).Email
                                    </td>
                                    <td>@item.EthereumQty</td>
                                    <td>@InstaEthereum.Models.Helper.parseValueIntoCurrency(@item.PurchasePrice)</td>
                                    <td>@item.ETHTXNNo</td>
                                    <td class="text-center">
                                        @{
                                            if (item.Status == 0)
                                            {
                                                <span class="badge badge-pill" style="background-color:#d9534f">Payment Pending</span>
                                            }
                                            if (item.Status == 1)
                                            {
                                                <span class="badge badge-pill" style="background-color:green">Payment Complete</span>
                                            }
                                            if (item.Status == 2)
                                            {
                                                <span class="badge badge-pill" style="background-color:yellow;color:#000;">ETH Pending</span>
                                            }
                                            if (item.Status == 3)
                                            {
                                                <span class="badge badge-pill" style="background-color:blue;color:#fff;">ETH Complete</span>
                                            }
                                        }
                                    </td>
                                    <td class="text-center">
                                        @Html.ActionLink("Update", "Update", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                                    </td>
                                </tr>
                                srNo++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
    }
</div>