@model InstaEthereum.Models.RegisterViewModel

@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminLogin.cshtml";
}

<div class="loginRow">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Insta Ethereum</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h4 class="text-center">Create a New Admin Account</h4>

            <section id="loginForm">
                @using (Html.BeginForm("SignUpProcess", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h5>Kindly provide below details.</h5>
                    <hr />
                    <div class="form-group">                        
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control text-center", Placeholder = "Enter email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">                        
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control text-center", Placeholder = "Enter password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">                        
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-center", Placeholder = "Confirm Password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-primary" value="Register" />
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}